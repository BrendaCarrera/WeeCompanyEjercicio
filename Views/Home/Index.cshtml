@model WeeCompanyEjercicio.Models.ModelDatos
@{
    ViewData["Title"] = "Home Page";
}

<!-- Section: Design Block -->
<section class="">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-3 fw-bold ls-tight">
                        WeeClaims<br />
                        <span class="text-primary">For insurance companies</span>
                    </h1>

                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card">
                        <div class="card-body py-5 px-md-5">
                            <h4>Registro persona</h4>
                            <form asp-action="Create">


                                <div class="form-outline mb-4">
                                    <input type="text" id="Compania" asp-for="Compania" class="form-control" />
                                    <label class="form-label" for="form3Example3">Nombre de la compañia</label>
                                    <span asp-validation-for="Compania" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <input asp-for="Contacto" class="form-control" />
                                    <label class="form-label"asp-for="Contacto">Nombre de la persona para contacto</label>
                                    <span asp-validation-for="Contacto" class="text-danger"></span>

                                </div>

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <input type="email" id="Correo" asp-for="Correo" class="form-control" />
                                    <label class="form-label" for="form3Example3">Correo electronico</label>
                                    <span asp-validation-for="Correo" class="text-danger"></span>

                                </div>

                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <input type="number" id="Telefono" asp-for="Telefono" class="form-control" maxlength="10" />
                                    <label class="form-label" for="form3Example4">Telefono</label>
                                    <span asp-validation-for="Telefono" class="text-danger"></span>

                                </div>

                                <!-- Checkbox -->
                                <div class="form-check d-flex justify-content-center mb-4">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" checked />
                                    <label class="form-check-label" for="form2Example33">
                                        He leido y aceptado el Aviso de privacidad/Terminos y condiciones
                                    </label>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block mb-4">
                                    Continuar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts{
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

